{
  "env": {
    "commonjs": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    "semi": "error",
    "require-await": "error",
    "no-unused-expressions": "error",
    "no-duplicate-imports": "error",
    "camelcase": "error",
    "arrow-spacing": "error",
    "no-unused-vars": "error",
    "prefer-template": "error",
    "no-useless-rename": "error"
  }
}
